<div class="standings">
  <h4>Standings</h4>
  <table>
    <thead>
      <tr>
	<th></th>
	<th>
	  Team
	</th>
	<th>
	  User
	</th>
	<th>
	  Points
	</th>
	<th>
	  Streak of
	</th>
	<th>
	  Current Pick
	</th>
      </tr>
    </thead>
    <tbody>
      <% @ranked_users.each do |user| %>
	<tr class="zebra">
	  <td>
	    <%= user.rank %>
	  </td>
	  <td>
	    <%= link_to user.team, user_path(user) %>
	  </td>
	  <td>
	    <%= user.name %>
	  </td>
	  <td>
	    <%= user.points %>
	  </td>
	  <td>
	    0
	  </td>
	  <td>
	    <%= user.current_pick %>
	  </td>
	</tr>
      <% end %>
    </tbody>
  </table>
</div>
